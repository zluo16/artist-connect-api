<p id="notice"><%= notice %></p>

<h1>Organization Connections</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organization_connections.each do |organization_connection| %>
      <tr>
        <td><%= organization_connection.user %></td>
        <td><%= organization_connection.organization %></td>
        <td><%= link_to 'Show', organization_connection %></td>
        <td><%= link_to 'Edit', edit_organization_connection_path(organization_connection) %></td>
        <td><%= link_to 'Destroy', organization_connection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

