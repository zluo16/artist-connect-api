<p id="notice"><%= notice %></p>

<h1>User Connections</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Connectee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_connections.each do |user_connection| %>
      <tr>
        <td><%= user_connection.user %></td>
        <td><%= user_connection.connectee %></td>
        <td><%= link_to 'Show', user_connection %></td>
        <td><%= link_to 'Edit', edit_user_connection_path(user_connection) %></td>
        <td><%= link_to 'Destroy', user_connection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

